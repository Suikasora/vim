#===================================MATH------LaTex==========================================


snippet s " " 
$
${1}
$
${0}
endsnippet

snippet ss
$$
${1}
$$
${0}
endsnippet
#===================================matrix
snippet matrix
\begin{matrix}
${1} \\\\
${2} \\\\
\end{matrix}
${0}
endsnippet

snippet matrixleft
	\left|
	\begin{matrix}
		${1:&} \\\\
		${2} \\\\
	\end{matrix}
	\right|
endsnippet
