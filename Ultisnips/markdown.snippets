#===================================Big Operator
snippet sum
\sum_ ${1:down} ^ ${2:up} ${0}
endsnippet

snippet int "integral"
\int_ {${1:down}} ^ {${2:up}} ${0}
endsnippet

snippet lim
lim_{ ${1:left} \to ${2:right} } ${0}
endsnippet
#===================================Operator
snippet frac "divide"
\frac {${1}} {${2}} ${0}
endsnippet

snippet sqrt
\sqrt [${1}] {${2}} ${0}
endsnippet

snippet +-
\pm ${0}
endsnippet

snippet *
\cdot ${0}
endsnippet

snippet U
\cup ${0}
endsnippet

snippet N
\cap ${0}
endsnippet

snippet >=
\geq ${0}
endsnippet

snippet <=
\leq ${0}
endsnippet

snippet !=
\neq ${0}
endsnippet

snippet ~=
\approx ${0}
endsnippet
#===================================Other
snippet d "dots"
\dots ${0}
